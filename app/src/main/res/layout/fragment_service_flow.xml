<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context=".ui.fragment.service_flow.ServiceFlowFragment">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@drawable/card_corner_location">

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_18sdp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_bold"
            android:singleLine="true"
            android:text="Ride Accepted"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginTop="@dimen/_minus30sdp"
        android:background="@drawable/round_top_right_left"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/round_top_right_left">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:src="@drawable/ic_coupons"
                app:civ_border_width="1px" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/avatar">

                <TextView
                    android:id="@+id/first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/clanpro_narrnews"
                    android:singleLine="true"
                    android:text="Alex Martin"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_14" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first_name">

                    <RatingBar
                        android:id="@+id/rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:isIndicator="true"
                        android:numStars="1"
                        android:progressTint="@color/yellow"
                        android:rating="5"
                        tools:ignore="UnusedAttribute" />


                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/rating"
                        android:ellipsize="end"
                        android:fontFamily="@font/clanpro_narrnews"
                        android:singleLine="true"
                        android:text="4.9"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_14" />
                </RelativeLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/sos"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_call" />


                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:background="@color/view" />


                <ImageView
                    android:id="@+id/chat"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_chat" />


            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/view" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_car" />


                <TextView
                    android:id="@+id/service_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/image"
                    android:ellipsize="end"
                    android:fontFamily="@font/clanpro_narrnews"
                    android:singleLine="true"
                    android:text="sljkaslkj"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_14" />


                <TextView
                    android:id="@+id/otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/service_type_name"
                    android:background="#fdfbfb"
                    android:ellipsize="end"
                    android:fontFamily="@font/clanpro_narrnews"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="lksajdlkjsdlk"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_14" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_toRightOf="@+id/left">


                <TextView
                    android:id="@+id/service_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:fontFamily="@font/clanpro_narrnews"
                    android:singleLine="true"
                    android:text="top"

                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_12" />


                <TextView
                    android:id="@+id/service_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/service_model"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_medium"
                    android:singleLine="true"
                    android:text="Bottom"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_12" />


            </RelativeLayout>

        </RelativeLayout>

        <!--<TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:drawableStart="@drawable/ic_circle"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:padding="8dp"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_14"
            android:visibility="gone" />-->

        <TextView
            android:id="@+id/provider_eta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_20"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/button_bkg_rectangle"
            android:ellipsize="end"
            android:fontFamily="@font/clanpro_medium"
            android:gravity="end"
            android:maxLines="1"
            android:padding="8dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/colorPrimaryText"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                style="@style/MyButton.Primary"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <Button
                android:id="@+id/call"
                style="@style/MyButton.Accent"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/call"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <Button
                android:id="@+id/share_ride"
                style="@style/MyButton.Primary"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/share_ride"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:visibility="gone" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>